@model ProductAddDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



        <form asp-action="Create" asp-controller="Home" method="post" enctype="multipart/form-data">
            <div class="form-group my-5">
                <label>Product Name</label>
                <input asp-for="ProductName" placeholder="Product Name" a />
            </div>
            <div class="form-group my-5">
                <label>Price</label>
                <input asp-for="Price" placeholder="Product Price" />
            </div>
            <div class="form-group my-5">
                <label>Image</label>
                <input type="file" id="files" asp-for="ProductImage" />

            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>

            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>

        </form>

